    <div style="height:3000px"></div>
    
    <button onclick="window.scrollBy(0, -100)">å‘ä¸Šæ»š 100px</button>
    <button onclick="window.scrollTo(0, 100)">æ»šåŠ¨åˆ° 100px</button>

    <button onclick="back()">è¿”å›é¡¶éƒ¨</button>
    <script>
        window.onscroll = function(){
            console.log( document.documentElement.scrollTop);
        }

        function back(){
            var top = document.documentElement.scrollTop || document.body.scrollTop;
            var speed = top;

            speed /= 70;
            window.scrollBy(0, speed * -1);

            if( top <= 0 ){
                clearTimeout(timer);
                return;
            }

            timer = setTimeout(back, 1);
        }
    </script>


